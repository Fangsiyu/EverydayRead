/**index.wxss**/

.userinfo {
    display: flex;
    flex-direction: column;
    align-items: center;
}

.userinfo-avatar {
    width: 128rpx;
    height: 128rpx;
    margin: 20rpx;
    border-radius: 50%;
}

.userinfo-nickname {
    color: #aaa;
}

.logo {
    margin: 0 auto;
}

.logo image {
    margin-top: 100rpx;
    width: 300rpx;
    height: 200rpx;
}

.index-text {
    margin-top: 200rpx;
    font-size: 18px;
    color: #707070;
}

.btn-index {
    margin: 0 auto;
    text-align: center;
    margin-top: 70rpx;
    color: #707070;
    font-size: 50rpx;
}

.btn-start {
    text-shadow: 0 50rpx 50rpx #ccc;
}

.user-mes {
    padding-top: 300rpx;
    text-align: center;
}

.user-mes image {
    width: 120rpx;
    height: 120rpx;
    border-radius: 50%;
    box-shadow: 0 0 50rpx #ccc;
}
.user-mes view {
    margin-top: 20rpx;
}
