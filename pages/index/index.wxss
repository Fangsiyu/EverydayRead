/**index.wxss**/

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.logo {
  margin: 0 auto;
}

.logo image {
  width: 120px;
}

.index-text {
  font-size: 18px;
  color: #707070;
}

.btn-index {
  margin: 0 auto;
  text-align: center;
  margin-top: 150px;
  color: #707070;
  font-size: 50rpx;
}

.btn-start {
  text-shadow: 0 50rpx 50rpx #ccc;
}
